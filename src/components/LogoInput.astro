---
// Components
import OptionsBox from "./OptionsBox.astro";

// Styles
import "../styles/logo.scss";
---

<OptionsBox
  buttonId="changeLogoButton"
  buttonLabel="Change logo"
  divId="changeLogoDiv"
>
  <div>
    <p>
      Upload your image file. Must not be taller than 70px. For help, see <a
        href="/help#logo">Change logo</a
      >.
    </p>
    <input type="file" id="logoUpload" accept="image/*" hidden />
    <label id="logoUploadLabel" for="logoUpload" class="button" tabindex="0" role="button"
      >Choose image file</label
    >
  </div>
  <button id="toggleLogo">Toggle logo</button>
  <button class="done">Done</button>
</OptionsBox>

<script src="../scripts/logo/main.js"></script>
