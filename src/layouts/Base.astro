---
import Head from "@/components/Head.astro";
import Footer from "@/components/Footer.astro";

const { pageTitle, prefetch, description } = Astro.props;
---

<!doctype html>
<html lang="en" prefix="og:https://ogp.me/ns#">
  <Head pageTitle={pageTitle} description={description} prefetch={prefetch} />
  <body>
    <slot />
    <Footer />
  </body>
</html>

<style lang="scss">
  html {
    font-size: 16px;
  }

  body {
    max-width: 2000px;
    margin: 0 auto;
    padding: 1rem;
    display: grid;
    grid-template-rows: auto 1fr;

    font-family: var(--font-body);
    font-weight: normal;
    font-size: var(--font-size-body);
  }
</style>
