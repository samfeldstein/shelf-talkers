---
// Layout
import Base from "@/layouts/Base.astro";

// Components
import CardContainer from "@/components/CardContainer.vue";
import Options from "@/components/Options.astro";
import Modal from "@/components/Modal.vue";

// Styles
import "@/styles/home.scss";
---

<Base pageTitle="Home" prefetch="help">
	<header>
		<div class="menu">
			<Options />
			<nav>
				<a href="/help">Help</a>
			</nav>
		</div>
		<h1>Shelf Talker Generator</h1>
	</header>
	<main>
		<p class="instructions">
			Click any card to edit. <kbd>Cmd/Ctrl + P</kbd> to print.
		</p>
		<Modal client:only="vue" />
		<CardContainer client:only="vue" />
	</main>
</Base>
