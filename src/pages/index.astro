---
import Base from "@/layouts/Base.astro";
import CardContainer from "@/components/CardContainer.vue";
import Controls from "@/components/Controls.astro";

import "@/styles/_home.scss";
---

<Base pageTitle="Home" prefetch="help" description="A simple web app for formatting and printing shelf-talkers.">
	<header class="no-print">
		<hgroup>
			<p>
				<span>an app by</span>
				<a class="name" href="https://samfeldstein.xyz">Sam Feldstein â˜ž</a>
			</p>
			<h1>Talkers</h1>
		</hgroup>
	</header>

	<main id="main">
		<Controls />
		<CardContainer client:only="vue" />
	</main>
</Base>

<style lang="scss">
	hgroup {
		p {
			width: 100%;
			display: flex;
			justify-content: space-between;

			margin: 0;

			font-size: var(--font-smaller);
			text-transform: lowercase;
		}
	}
</style>
